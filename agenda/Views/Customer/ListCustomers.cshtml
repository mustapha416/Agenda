@model IEnumerable<Customer>
@{
    ViewData["Title"] = "liste des customers";
}

<div class="text-center">
    <h1 class="display-6">Aujourd'hui, on est le</h1>
    <p class="display-6">@DateTime.Today.ToString("d")</p>
</div>
@if(Model.Count()>0)
{


    <div class="text-center">

        <table class="table" style="width:100%">
            <thead>
                <tr>
                    <th>Identifiant</th>
                    <th>Nom </th>
                    <th>Prénom</th>
                    <th>Mail </th>
                    <th>Téléphone</th>
                    <th>budget</th>
                    <th>Profil</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                   var Mode = Model.OrderBy(s => s.Lastname);

                
               
                @foreach (var Appointment in Mode)
                {
                    <tr>
                    <td>@Appointment.IdCustomer</td>
                    <td>@Appointment.Lastname</td>
                    <td>@Appointment.Firstname</td>
                    <td>@Appointment.Mail</td>
                    <td>@Appointment.PhoneNumber</td>
                    <td>@Appointment.Budget</td>
                    <td><a class="btn btn-info"
                    asp-action="ProfilCustomer"
                    asp-route-id="@Appointment.IdCustomer"
                    >
                    Voir Profil
                </a></td>
                   <td><a class="btn btn-danger"
                    asp-action="DeleteCustomer"
                    asp-route-id="@Appointment.IdCustomer"
                    >
                    Supprimer
                </a></td>
                </tr>            
            }
            }
        </tbody>
    </table>
    </div>
}
 